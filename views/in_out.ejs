<%- include('./partials/header.ejs'); -%>

<div class = "in_out">
    <div class = "bookInformation">
        <img class="mb-4 ioSignImg" src= <%= img%> alt="books" height = "330" width = "330">
        <h2 class = "text"><%= bookTitle%></h2>
        <h4 class = "text"><%= bookAuthor%></h4>
        <h6 class = "reqText"> ISBN: <%= bookIsbn%></h6>
        <h6 class = "reqText"> Available: <%= currNum%></h6>
    </div>
    <div class = "borrowReq">
        <div class="container mt-5">
            <%if(locals.userID){%>
                <form action = "/borrow" method = "post">   
                    <!-- Day Picker -->
                     <h2 class = "text">Borrower the book: </h2>
                    <div class="mb-3">
                        <label for="day" class="form-label text">Choose a day:</label>
                        <input type="date" class="form-control text" id="day" name="day">
                    </div>

                    <!-- Borrower Days Picker -->
                    <div class="mb-3">
                        <label for="days" class="form-label text">How many days will you need to keep the book once you borrow it?</label>
                        <select class="form-select text" id="days" name="days">
                            <option value="15">15</option>
                            <option value="30">30</option>
                            <option value="90">90</option>
                            <option value="120">120</option>
                        </select>
                    </div>

                    <div class="mb-3">
                        <label class="form-label text"> User ID: </label>
                        <input type="text" name = "userID" class="form-control" value="<%= userID%>" readonly>
                    </div>

                    <div class="mb-3">
                        <label class="form-label text"> Book ID: </label>
                        <input type="text" name = "bookID" class="form-control" value="<%= bookid%>" readonly>
                    </div>
                    <% if(currNum < 1){ %>
                        <p>The book is current not Available!</p>
                        <%}else{%>
                        <input type="hidden" name = "title" class="form-control" value="<%= bookTitle%>" readonly>
                        <button type="submit" class="btn bg-primary-subtle text">Borrow</button>
                        <%}%>
                    </form>
                    
            <%}%>
        </div>
    </div>
</div>



<%- include('./partials/footer.ejs'); -%>